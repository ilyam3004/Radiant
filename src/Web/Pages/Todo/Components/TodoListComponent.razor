<div>
    <h5>@TodoList.Title</h5>
    @if (TodoList != null)
    {
        <div class="d-flex align-items-center mb-3">
            <div class="form-group mr-3 mb-0">
                <input
                    type="text"
                    class="form-control"
                    placeholder="Enter a note"/>
            </div>
            <button
                type="button"
                class="btn btn-success mr-3">
                Add
            </button>
        </div>
        <div class="table-wrapper">
            <table class="table table-hover table-bordered">
                <thead>
                <tr>
                    <th>№</th>
                    <th>Note</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                @for (int i = 0; i < TodoList.TodoItems.Count; i++)
                {
                    <tr>
                        <td>@(i + 1)</td>
                        <td>@TodoList.TodoItems[i].Note</td>
                        <td>@(TodoList.TodoItems[i].Done ? "Finished" : "In progress")</td>
                        <td>
                            <button class="btn btn-danger"
                                    @onclick="() => RemoveTodoItem(TodoList.TodoItems[i - 1])">
                                Delete
                            </button>
                            <button class="btn btn-success" ng-click="finished($index)">
                                Finished
                            </button>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <p>No todolist provided</p>
    }
</div>